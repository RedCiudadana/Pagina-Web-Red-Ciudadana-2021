{% extends "base.njk" %}

{% block head %}
<title>{{ title }}</title>

{% endblock %}

{% block content %}
    
<!--POST-->
<div class="container " >
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
      <article>
        <header class="py-4 my-4">
          <h1 class=" font-bold text-4xl text-gray-800">
            {{ title }}
          </h1>
          <br>
          <h6 class=" font-bold text-1xl text-gray-800">
            {{ description }}
          </h6>

          <div class=" text-sm text-gray-600 mb-6">
            Autor:
              <span class="text-sm font-semibold text-gray-900 ml-2">
                <!--autor correo fecha-->
                    {{ autor }} | {{ correo }} | {{ date|dateFormat('DD/MM/YYYY')}}
              </span>
          </div>
        </header>
        
        <section class="content text-justify">
          <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 px-4">
              {{ content | safe}}
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 px-4" >
              <h6>Escucha nuestros podcasts</h6>
              <div class="w-full">
                {% if collections.podcasts %}
                  {% for podcast in collections.podcasts | reverse | limit(4) %}
                    <div class="block mb-4">
                      <iframe src="{{ podcast.data.link }}" width="100%"
                        height="152" frameBorder="0" allowfullscreen="" class="rifra"
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                    </div>
                  {% endfor %}
                {% endif %}
              </div>
            </div>  
          </div>

        </section>
        
      </article>
    </div>

    <!-- event-area-start -->
    <div class="event-area pt-80 pb-130">
        <div class="container">
            <div class="breadcrumb-text text-left">
                <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4">MÃ¡s Blogs</h2>
            </div>

            {% for post in collections.blogs | reverse | limit(4)%}
            {% if page.url !== post.url %}

            <!-- Evento 1 -->
            <div class="event-bg event-bg-03 pos-rel mb-30">
                <div class="row">
                    <div class="col-xl-3 col-lg-3">
                        <div class="event-content mb-20">
                            <span><i class="far fa-calendar-alt verdeo"></i> Fecha:</span>
                            <h3>{{post.data.date | dateFormat('DD / MM / YYYY')}}</h3>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4">
                        <div class="event-img mb-20">
                            <a href="{{post.url}}"><img src="{{post.data.image}}" alt="Lanzamiento Web Red Ciudadana"></a>
                        </div>
                    </div>
                    <div class="col-xl-5 col-lg-5">
                        <div class="event-wrapper mb-20 ">
                            <div class="event-text">
                                <span><i class="far fa-map-marked-alt verdeo"></i> {{post.data.description}}</span>
                                <h3><a href="{{post.url}}">{{post.data.title}}</a></h3>
                            </div>
                            <div class="event-meta">
                                <span><i class="far fa-user-circle"></i>{{post.data.autor}}</span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="evt-button">
                    <a href="{{post.url}}"><i class="far fa-long-arrow-right"></i></a>
                </div>
            </div>

            {% endif %}
            {% endfor %}

        </div>
    <div>

  </div>
</div>

{% endblock %}