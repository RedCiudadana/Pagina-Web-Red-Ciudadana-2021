{% extends "base.njk" %}

{% block head %}
<title>Departamento | {{ nombre }}</title>

{% endblock %}

{% block content %}
            <!-- Banner-area-start -->
            <div class="breadcrumb-area pt-150 pb-155" style="background-image:url({{slider}})">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="breadcrumb-text text-center">
                                <h1>{{nombre}}</h1>
 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Banner-area-end -->

            <!-- Intro-area-start -->
            <div class="about-us-area pt-130 pb-100">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-6 col-lg-6">
                            <div class="abbout-us-wrapper mb-30">
                                <div class="section-title mb-40">
                                    <h1>{{titulo}}</h1>
                                    <p class="mr-50 justify-text">{{description | safe}}</p>
                                </div>

                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6">
                            <div class="about-img mb-30 pos-rel">
                                <div class="about-img">
                                    <img src="{{image}}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Intro-area-end -->
{% endblock %}