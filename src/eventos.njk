---
pagination:
  data: collections.eventos
  size: 6
  alias: eventos
  reverse: true
permalink: "eventos/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "base.njk" %}

{% block head %}
<title>Red Ciudadana - Eventos</title>
{% endblock %}

{% block content %}

            <!-- Banner -area-start -->
            <div class="breadcrumb-area pt-150 pb-155" style="background-image:url(/assets/img/red/eventos/06.png)">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="breadcrumb-text text-center">
                                <h1 style="font-size:45px">Próximos Eventos</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- breadcrumb-area-end -->

            <!-- event-area-start -->
            <div class="event-area pt-80 pb-130">
                <div class="container">
                    <!--div class="breadcrumb-text text-left">
                        <h2>Enero 2022 </h2>
                    </div><br-->
                    <div class="row">
                    {% if eventos%}
                    {% for post in eventos%}
                    <!-- Eventos -->
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="case-wrapper case-02-wrapper mb-30">
                                <div class="case-img">
                                    <a target="_blank" href="{{post.url}}"><img src="{{post.data.image}}" alt="{{proyecto.data.title}}"></a>
                                </div>
                                <div class="case-text">
                                    <h3><a target="_blank" href="{{post.url}}"> {{post.data.title}} </a></h3>
                                    <span>{{post.data.date | dateFormat('DD / MM / YYYY')}}</span>
                                </div>
                                <div class="case-info custom-overflow-hidden" style="height:120px">
                                    <p class="text-overflow2"> {{post.data.description}} </p>
                                </div>
                                <div class="b-button">
                                    <a target="_blank" href="{{post.url}}"><span>Mas Información</span> <i class="fa-solid fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                    {% endif %}
                    </div>

                    <div class="d-flex justify-content-center">
                        {% if pagination.href.previous %}
                        <div class="mx-4">
                            {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Eventos más recientes</a>{% else %}←  Nuevos Eventos{% endif %}
                        </div>
                        {% endif %}
                        {% if pagination.href.next %}
                        <div class="mx-4">
                            {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Eventos anteriores →</a>{% else %}Eventos anteriores →{% endif %}
                        </div>
                        {% endif %}
                    </div>




                </div>
            </div>
            <!-- event-area-end -->

{% endblock %}