---
pagination:
  data: collections.blogs
  size: 6
  alias: blogs
  reverse: true
permalink: "blogs/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "base.njk" %}

{% block head %}
<title>Red Ciudadana - Blogs</title>
{% endblock %}

{% block content %}

            <!-- Banner -area-start -->
            <div class="breadcrumb-area pt-150 pb-155" style="background-image:url(/assets/img/red/01.png)">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="breadcrumb-text text-center">
                                <h1 style="font-size:45px">Lo último </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- breadcrumb-area-end -->

            <!-- event-area-start -->
            <div class="event-area pt-80 pb-130">
                <div class="container">
                    <div class="breadcrumb-text text-left">
                        <h2>Lo último </h2>
                    </div><br>
                    <div class="row">
                    {% if blogs%}
                    {% for post in blogs%}

                        <!-- Blog -->
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="case-wrapper case-02-wrapper mb-30">
                                <div class="case-img">
                                    <a target="_blank" href="{{post.url}}"><img src="{{post.data.image}}" alt="{{proyecto.data.title}}"></a>
                                </div>
                                <div class="case-text">
                                    <h3><a target="_blank" href="{{post.url}}"> {{post.data.title}} </a></h3>
                                    <span>{{post.data.date | dateFormat('DD / MM / YYYY')}}</span>
                                </div>
                                <div class="case-info">
                                    <p> {{post.data.description}} </p>
                                    <div class="b-button">
                                        <a target="_blank" href="{{post.url}}"><span>Mas Información</span> <i class="far fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                    {% endif %}
                    </div>

                    <div class="d-flex justify-content-center">
                        {% if pagination.href.previous %}
                        <div class="mx-4">
                            {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Blogs más recientes</a>{% else %}←  Nuevos blog{% endif %}
                        </div>
                        {% endif %}
                        {% if pagination.href.next %}
                        <div class="mx-4">
                            {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Blogs anteriores →</a>{% else %}Blog anteriores →{% endif %}
                        </div>
                        {% endif %}
                    </div>

                </div>
            </div>
            <!-- event-area-end -->

{% endblock %}