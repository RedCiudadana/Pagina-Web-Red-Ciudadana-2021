---
pagination:
  data: collections.oportunidades
  size: 6
  alias: oportunidades
  reverse: true
permalink: "oportunidades/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "base.njk" %}

{% block head %}
<title>Red Ciudadana - Oportunidades</title>
{% endblock %}

{% block content %}

            <!-- Banner -area-start -->
            <div class="breadcrumb-area pt-150 pb-155" style="background-image:url(/assets/img/red/01.png)">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="breadcrumb-text text-center">
                                <h1 style="font-size:45px;text-transform:inherit!important">Oportunidades</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- breadcrumb-area-end -->

            <!-- event-area-start -->
            <div class="event-area pt-80 pb-130">
                <div class="container">
                    <div class="row">
                    {% if oportunidades%}
                    {% for post in oportunidades%}

                        <!-- Blog -->
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="case-wrapper case-02-wrapper mb-30">
                                <div class="case-img">
                                    <a  href="{{post.url}}"><img src="{{post.data.image}}" alt="{{proyecto.data.title}}"></a>
                                </div>
                                <div class="case-text">
                                    <h3><a  href="{{post.url}}"> {{post.data.title}} </a></h3>
                                    <span>{{post.data.date | dateFormat('DD / MM / YYYY')}}</span>
                                </div>
                                <div class="case-info custom-overflow-hidden" style="height:120px">
                                    <p class="text-overflow2"> {{post.data.description}} </p>
                                </div>
                                <div class="b-button">
                                    <a  href="{{post.url}}"><span>Mas Información</span> <i class="fa-solid fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                    {% endif %}
                    </div>

                    <div class="d-flex justify-content-center">
                        {% if pagination.href.previous %}
                        <div class="mx-4">
                            {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Oportunidades más recientes</a>{% else %}←  Nuevas Oportunidades{% endif %}
                        </div>
                        {% endif %}
                        {% if pagination.href.next %}
                        <div class="mx-4">
                            {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Oportunidades anteriores →</a>{% else %}Oportunidades anteriores →{% endif %}
                        </div>
                        {% endif %}
                    </div>

                </div>
            </div>
            <!-- event-area-end -->

{% endblock %}